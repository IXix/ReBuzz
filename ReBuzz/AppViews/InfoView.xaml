<UserControl x:Class="ReBuzz.InfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReBuzz"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" VerticalAlignment ="Stretch">

    <Grid >
        <TextBox Name="tbInfo" Style="{DynamicResource TextBoxStyle1}" Background="#333" Foreground="White" AcceptsReturn="True" FontFamily="Segoe UI" FontSize="16" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
